.login-container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  margin: 60rpx 0;
  text-align: center;
}

.logo image {
  width: 160rpx;
  height: 160rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  margin-top: 20rpx;
}

.form {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: #F9B44C;
  color: #fff;
  border-radius: 44rpx;
  margin-top: 60rpx;
}

.register-link {
  text-align: center;
  color: #409EFF;
  font-size: 28rpx;
  margin-top: 30rpx;
} 