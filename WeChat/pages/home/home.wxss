/* pages/home/home.wxss */
.home-container {
  padding: 20rpx;
}

.welcome-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-name {
  color: #F9B44C;
  font-weight: bold;
}

.tables-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-bar {
  margin-bottom: 30rpx;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reset-btn {
  color: #409EFF;
  font-size: 28rpx;
}

.picker {
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  flex: 1;
  margin-right: 20rpx;
}

.tables-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.table-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #e6e6e6;
}

.table-occupied {
  opacity: 0.8;
  background: #f5f7fa;
}

.table-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
}

.table-image {
  margin: 20rpx 0;
}

.table-image image {
  width: 120rpx;
  height: 120rpx;
}

.table-info {
  color: #606266;
  margin: 20rpx 0;
}

.table-status {
  margin-top: 20rpx;
}

.occupied-tag {
  display: inline-block;
  padding: 10rpx 30rpx;
  background: #fdf6ec;
  color: #e6a23c;
  border-radius: 30rpx;
  font-size: 24rpx;
}