/* pages/register/register.wxss */
.register-container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  margin: 40rpx 0;
  text-align: center;
}

.logo image {
  width: 120rpx;
  height: 120rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  margin-top: 20rpx;
}

.form {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.radio-group {
  margin: 30rpx 0;
  display: flex;
  align-items: center;
}

.label {
  color: #666;
  margin-right: 20rpx;
}

.radio-label {
  margin-right: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #F9B44C;
  color: #fff;
  border-radius: 44rpx;
  margin-top: 40rpx;
}

.login-link {
  text-align: center;
  color: #409EFF;
  font-size: 28rpx;
  margin-top: 30rpx;
}