/* pages/order/order.wxss */
.order-container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

/* 顶部餐桌信息卡片 */
.info-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.table-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-section {
  display: flex;
  align-items: center;
  gap: 30rpx;
  flex-wrap: wrap;
  padding: 10rpx 0;
}

.table-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.cart-btn {
  position: relative;
  padding: 12rpx 24rpx;
  background: #f5f7fa;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #606266;
  min-width: 120rpx;
  text-align: center;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #f56c6c;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.type-picker {
  padding: 12rpx 24rpx;
  background: #f5f7fa;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #606266;
}

.no-table-tip {
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}

.select-table-link {
  color: #409eff;
  display: inline;
}

/* 菜品列表 */
.foods-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.food-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.food-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.food-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 200rpx;
}

.food-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.food-price {
  color: #f56c6c;
  font-size: 32rpx;
  font-weight: bold;
}

.food-desc {
  font-size: 26rpx;
  color: #909399;
  margin-bottom: 20rpx;
}

.food-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.sales-info {
  font-size: 24rpx;
  color: #909399;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 30rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 30rpx;
  overflow: hidden;
  margin-right: 10rpx;
}

.minus, .plus {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #409eff;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  background: transparent;
}

/* 购物车弹窗 */
.cart-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: env(safe-area-inset-bottom);
}

.cart-popup.show {
  transform: translateY(0);
}

.cart-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.cart-content {
  position: relative;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 75vh;
  display: flex;
  flex-direction: column;
}

.cart-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
}

.cart-header .title {
  font-size: 32rpx;
  font-weight: bold;
}

.cart-header .close {
  font-size: 40rpx;
  color: #909399;
}

.cart-list {
  flex: 1;
  padding: 20rpx 30rpx;
  max-height: 50vh;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  gap: 20rpx;
}

.item-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-name {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 10rpx;
}

.item-price {
  font-size: 32rpx;
  color: #f56c6c;
}

.item-quantity {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.delete-btn {
  font-size: 40rpx;
  color: #909399;
  padding: 20rpx;
}

.cart-footer {
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
}

.remark-input {
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.total-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.total-text {
  font-size: 28rpx;
  color: #303133;
}

.total-amount {
  color: #f56c6c;
  font-size: 36rpx;
  font-weight: bold;
}

.total-bar button {
  min-width: 200rpx;
  height: 80rpx;
  font-size: 32rpx;
  margin-left: 30rpx;
}