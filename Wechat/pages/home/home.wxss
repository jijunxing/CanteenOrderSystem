/* pages/home/home.wxss */
.home-container {
  padding: 20rpx;
  background: #f8f8f8;
}

.welcome-card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-name {
  color: #F9B44C;
  font-weight: bold;
}

.tables-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-bar {
  margin-bottom: 20rpx;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reset-btn {
  color: #409EFF;
  font-size: 24rpx;
}

.picker {
  padding: 12rpx 16rpx;
  background: #f5f7fa;
  border-radius: 6rpx;
  flex: 1;
  margin-right: 16rpx;
  font-size: 24rpx;
}

.tables-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.table-card {
  background: #fff;
  border-radius: 8rpx;
  padding: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 160rpx;
}

.table-occupied {
  opacity: 0.8;
  background: #f5f7fa;
}

.table-header {
  font-size: 24rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
}

.table-image {
  margin: 8rpx 0;
}

.table-image image {
  width: 48rpx;
  height: 48rpx;
}

.table-info {
  font-size: 20rpx;
  color: #606266;
  margin: 8rpx 0;
}

.table-status {
  margin-top: 8rpx;
}

.occupied-tag {
  display: inline-block;
  padding: 2rpx 10rpx;
  background: #fdf6ec;
  color: #e6a23c;
  border-radius: 16rpx;
  font-size: 20rpx;
}

/* 轮播图样式 */
.banner-swiper {
  height: 300rpx;
  margin-bottom: 20rpx;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.banner-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  border-radius: 0 0 12rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.banner-name {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.banner-price {
  color: #F9B44C;
  font-size: 32rpx;
  font-weight: bold;
}