.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background: linear-gradient(to bottom, #f8f9fa, #fff);
}

.logo-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #909399;
}

.login-form {
  width: 100%;
  padding: 40rpx 0;
}

.input-group {
  position: relative;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.input-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.input {
  height: 100rpx;
  padding: 0 30rpx 0 100rpx;
  font-size: 28rpx;
  color: #303133;
}

.input-placeholder {
  color: #909399;
}

.login-btn {
  margin-top: 60rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  background: #F9B44C;
  border-radius: 45rpx;
  box-shadow: 0 4rpx 16rpx rgba(249, 180, 76, 0.3);
  transition: all 0.3s;
}

.btn-hover {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(249, 180, 76, 0.3);
}

.register-link {
  margin-top: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #909399;
}

.link-text {
  color: #F9B44C;
  margin-left: 4rpx;
}

.footer {
  padding: 40rpx 0;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: #909399;
}

@supports (padding-bottom: constant(safe-area-inset-bottom)) {
  .login-container {
    padding-bottom: calc(40rpx + constant(safe-area-inset-bottom));
  }
}

@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .login-container {
    padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  }
} 